<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_acc_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/txt_acc_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="MyTime"
        android:layout_toEndOf="@id/txt_acc_top"
        android:layout_margin="5dp"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/txtVeh"
        android:layout_toEndOf="@id/txt_acc_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle"/>

    <TextView
        android:id="@+id/txtFrom"
        android:layout_below="@id/txtVeh"
        android:layout_toEndOf="@id/txt_acc_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"/>

    <TextView
        android:id="@+id/txtDelimiter"
        android:layout_below="@id/txtVeh"
        android:layout_toEndOf="@id/txtFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delimiter"/>

    <TextView
        android:id="@+id/txtTo"
        android:layout_toEndOf="@id/txtDelimiter"
        android:layout_below="@id/txtVeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"/>

    <ImageButton
        android:id="@+id/btnDeleteAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/ic_delete_black"
        />

</RelativeLayout>